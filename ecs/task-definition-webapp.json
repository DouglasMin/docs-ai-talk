{
  "family": "ai-doc-chat-webapp",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ai-doc-chat-task-role",
  "containerDefinitions": [
    {
      "name": "ai-doc-chat-webapp",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.YOUR_REGION.amazonaws.com/ai-doc-chat-webapp:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp",
          "name": "http"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "PORT",
          "value": "3000"
        }
      ],
      "secrets": [
        {
          "name": "S3_BUCKET",
          "valueFrom": "arn:aws:ssm:YOUR_REGION:YOUR_ACCOUNT_ID:parameter/ai-doc-chat/S3_BUCKET"
        },
        {
          "name": "DYNAMODB_TABLE_NAME",
          "valueFrom": "arn:aws:ssm:YOUR_REGION:YOUR_ACCOUNT_ID:parameter/ai-doc-chat/DYNAMODB_TABLE_NAME"
        },
        {
          "name": "BEDROCK_KB_ID",
          "valueFrom": "arn:aws:ssm:YOUR_REGION:YOUR_ACCOUNT_ID:parameter/ai-doc-chat/BEDROCK_KB_ID"
        },
        {
          "name": "BEDROCK_DATA_SOURCE_ID",
          "valueFrom": "arn:aws:ssm:YOUR_REGION:YOUR_ACCOUNT_ID:parameter/ai-doc-chat/BEDROCK_DATA_SOURCE_ID"
        },
        {
          "name": "SQS_INGESTION_QUEUE_URL",
          "valueFrom": "arn:aws:ssm:YOUR_REGION:YOUR_ACCOUNT_ID:parameter/ai-doc-chat/SQS_INGESTION_QUEUE_URL"
        },
        {
          "name": "UPSTAGE_API_KEY",
          "valueFrom": "arn:aws:ssm:YOUR_REGION:YOUR_ACCOUNT_ID:parameter/ai-doc-chat/UPSTAGE_API_KEY"
        },
        {
          "name": "NEXT_PUBLIC_WS_URL",
          "valueFrom": "arn:aws:ssm:YOUR_REGION:YOUR_ACCOUNT_ID:parameter/ai-doc-chat/NEXT_PUBLIC_WS_URL"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ai-doc-chat-webapp",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "webapp",
          "awslogs-create-group": "true"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "wget --no-verbose --tries=1 --spider http://localhost:3000/api/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}

